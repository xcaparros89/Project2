<div class="container">
<form action="/login" method="POST" id="form">
    <div class="row">
        <div class="col-12">
            <h2>Login</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <input type="text" name="username" placeholder="Username/Email">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <input type="password" name="password" placeholder="Password">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button>Login</button>
        </div>
    </div>
    {{#if errorMessage }}
    <div class="row">
        <div class="col-12">
        {{ errorMessage }}
        </div>
    </div>
    {{/if}}
    <div class="row">
        <div class="col-12">
            <p class="account-message"> Don't have an account? <a href="/signup">Sign up</a></p>
        </div>
    </div>
</form>
</div>
