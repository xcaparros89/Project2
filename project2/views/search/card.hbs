<!-- search/card.hbs -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Card search</h2>
        </div>
        <div class="col-12">
            <div>
                <form id="form" action="/search/card" method="POST">
                    <label for="name">Name:</label>
                    <input type="text" name="name" />

                    <label for="type">Type:</label>
                    <input type="text" name="type" />

                    <label for="subtype">Subtype:</label>
                    <input type="text" name="subtype" />

                    <label for="set_name">Set:</label>
                    <input type="text" name="set_name" />

                    <label for="legality">Legality:</label>
                    <input type="text" name="legality" />{{!-- change type text for predefined choices --}}
                    <label for="colors">Colors:</label>
                    <input type="text" name="colors" />
                    <button type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
    {{#if cardAdded}}
    <div class="row">
        <div class="col-12 text-center p-3">
        <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </svg>
        <p class="d-inline">{{addedMessage}}</p>
        </div>
    </div>
    {{/if}}
    <div class="row">
        {{#each resultSearch}}
        {{> cardCard this}}
        {{/each}}
    </div>
</div>