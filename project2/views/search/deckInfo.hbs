            {{/if}}
            {{#if deckOrg.mainCards.enchantments}}
            <div class="col-xs-12"><p class="innerheader">Enchantments</p></div>
            {{#each deckOrg.mainCards.enchantments}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.mainCards.instants}}
            <div class="col-xs-12"><p class="innerheader">Instants</p></div>
            {{#each deckOrg.mainCards.instants}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.mainCards.sorceries}}
            <div class="col-xs-12"><p class="innerheader">Sorceries</p></div>
            {{#each deckOrg.mainCards.sorceries}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.mainCards.planeswalkers}}
            <div class="col-xs-12"><p class="innerheader">Planeswalkers</p></div>
            {{#each deckOrg.mainCards.planeswalkers}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.mainCards.lands}}
            <div class="col-xs-12"><p class="innerheader">Lands</p></div>
            {{#each deckOrg.mainCards.lands}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.mainCards.others}}
            <div class="col-xs-12"><p class="innerheader">Others</p></div>
            {{#each deckOrg.mainCards.others}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            <!-- ===== END MAIN DECK ===== -->
            <!-- ===== START SIDEBOARD ===== -->
            {{#if deckOrg.sideboard.lands}}
            <div class="col-xs-12"><p class="innerTitle">Sideboard</p></div>
            {{#if deckOrg.sideboard.creatures}}
            <div class="col-xs-12"><p class="innerheader">Creatures</p></div>
            {{#each deckOrg.sideboard.creatures}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.sideboard.artifacts}}
            <div class="col-xs-12"><p class="innerheader">Artifacts</p></div>
            {{#each deckOrg.sideboard.artifacts}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.sideboard.enchantments}}
            <div class="col-xs-12"><p class="innerheader">Enchantments</p></div>
            {{#each deckOrg.sideboard.enchantments}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.sideboard.instants}}
            <div class="col-xs-12"><p class="innerheader">Instants</p></div>
            {{#each deckOrg.sideboard.instants}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.sideboard.sorceries}}
            <div class="col-xs-12"><p class="innerheader">Sorceries</p></div>
            {{#each deckOrg.sideboard.sorceries}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.sideboard.planeswalkers}}
            <div class="col-xs-12"><p class="innerheader">Planeswalkers</p></div>
            {{#each deckOrg.sideboard.planeswalkers}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.sideboard.lands}}
            <div class="col-xs-12"><p class="innerheader">Lands</p></div>
            {{#each deckOrg.sideboard.lands}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{#if deckOrg.sideboard.others}}
            <div class="col-xs-12"><p class="innerheader">Others</p></div>
            {{#each deckOrg.sideboard.others}}
            <div class="col-xs-12 col-sm-6">
                <p style="display:inline;"><strong>{{count}}&nbsp;</strong>{{card.name}}&nbsp;</p><span class="mana-cost">{{card.mana_cost}}</span>
            </div>
            {{/each}}
            <div class="col-xs-12"><hr class="solid" style="magin-bottom: 50px"></div>
            {{/if}}
            {{/if}}
            <!--- ===== END SIDEBOARD ===== -->
        </div>
        <!-- ===== // END DECK CARDS ===== -->
        <!-- ===== START BUTTONS AND LIKES ===== -->
        <div class="container mw750" style="margin-top:15px">
            {{#if isUserAuthor}}
            <div class="col-xs-6">
                <p class="atext" style="display: inline">
                    <span class="ion-thumbsup" style="font-size:160%"></span>&nbsp;&nbsp;<span style="font-family:Arial, Helvetica, sans-serif"><b>{{likes}}</b></span>
                </p>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <p class="atext" style="display: inline">
                    <span class="ion-thumbsdown" style="font-size:160%"></span>&nbsp;&nbsp;<span style="font-family:Arial, Helvetica, sans-serif"><b>{{dislikes}}</b></span>
                </p>
            </div>
            {{else}}
            {{#if isLogged}}
            <div class="col-xs-6">
                <a href="/deckInfo/like" class="atext">
                    <span class="ion-thumbsup" style="font-size:160%"></span>&nbsp;&nbsp;<span style="font-family:Arial, Helvetica, sans-serif"><b>{{likes}}</b></span>
                </a>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <a href="/deckInfo/dislike" class="atext">
                    <span class="ion-thumbsdown" style="font-size:160%"></span>&nbsp;&nbsp;<span style="font-family:Arial, Helvetica, sans-serif"><b>{{dislikes}}</b></span>
                </a>
            </div>
            {{else}}
            <div class="col-xs-6">
                <a href="/login" class="atext">
                    <span class="ion-thumbsup" style="font-size:160%"></span>&nbsp;&nbsp;<span style="font-family:Arial, Helvetica, sans-serif"><b>{{likes}}</b></span>
                </a>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <a href="/login" class="atext">
                    <span class="ion-thumbsdown" style="font-size:160%"></span>&nbsp;&nbsp;<span style="font-family:Arial, Helvetica, sans-serif"><b>{{dislikes}}</b></span>
                </a>
            </div>
            {{/if}}
            {{/if}}
            <div class="col-xs-6 text-right">
                {{#if isUserAuthor}}
                <form id="edit" action="/myDecks/modify/{{deckOrg.id}}" method="POST" style="display:inline">
                    <a href="javascript:$('#edit').submit();" class="atext">
                        <span class="ion-compose" style="font-size:140%"></span>&nbsp;&nbsp;Edit Deck
                    </a>
                </form>
               &nbsp;&nbsp;&nbsp;&nbsp; 
                <form id="delete" action="/myDecks/delete/{{_ide}}" method="POST"style="display:inline">
                    <a href="javascript:$('#delete').submit();" class="atext">
                        <span class="ion-trash-a" style="font-size:140%"></span>&nbsp;&nbsp;Delete Deck
                    </a>
                </form>
                {{else}}
                {{#if isLogged}}
                <form id="copy" action="/myDecks/copy/{{deckOrg.id}}" method="GET">
                    <a href="javascript:$('#copy').submit();" class="atext">
                        <span class="ion-android-bookmark" style="font-size:140%"></span>&nbsp;&nbsp;Add to My Decks
                    </a>
                </form>
                {{else}}
                <form id="copy" action="/login" method="GET">
                    <a href="javascript:$('#copy').submit();" class="atext">
                        <span class="ion-android-bookmark" style="font-size:140%"></span>&nbsp;&nbsp;Add to My Decks
                    </a>
                </form>
                {{/if}}
                {{/if}}
            </div>
        </div>
        <!-- ===== END BUTTONS AND LIKES ===== -->
        <!-- ===== START COMMENTS ===== -->
        <div class="container text-center mw750">
            <!-- INNER DIVIDER -->
            <div class="col-xs-12 items-container bottom-wrapper">
                <p>&nbsp;</p>
            </div>
            <!-- /INNER DIVIDER -->
            <h2>Comments</h2>
            <form id="form" class="contact-form" action='/deckInfo/reply' method='POST'>
                <textarea name="reply" placeholder="What are your thoughts?" rows="4" cols=""></textarea></br>
                <a href="javascript:$('#form').submit();" class="button-game btn-new-deck">
                    <span class="button-game-bg-left"></span>
                    <span class="button-game-bg-mid">
                    <span>Comment</span>
                    </span> 
                    <span class="button-game-bg-right"></span>
                </a>
            </form>
        </div>
        <div class="container mw750">
            <!-- INNER DIVIDER -->
            <div class="col-xs-12 items-container bottom-wrapper" style="margin-bottom:25px">
                <p>&nbsp;</p>
            </div>
            <!-- /INNER DIVIDER -->
            {{#each deckOrg.replies}}
                <p><span class="innerheader">{{author}}</span></p>
                <p class="comment">{{message}}</p>
            <hr class="solid">
            {{/each}}
        </div>
        <hr class="invisible">
        <!-- ===== END COMMENTS ===== -->
    </div>
</div>