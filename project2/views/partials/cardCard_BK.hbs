<!-- partials/card.hbs -->
<div class="col-xs-6 col-sm-4 col-md-3" style="margin: 15px 0;">
    <!-- Button trigger modal -->
      <a data-toggle="modal" data-target="#cardDetails"><img style="width:85%; height: auto; margin: auto; display:block;" src="{{image_uris.png}}" alt="{{name}}" data-Strength="{{name}}"></a>
    <form action='/search/card/{{_id}}' method='post'>
        <input name='owned' type="number" value="1" min="0" class="m-2" style="display: inline; max-width:40px">
        <button class="btn btn-primary" type='submit'>+</button>
    </form>
</div>

<!-- Modal -->
<div class="modal fade" id="cardDetails" tabindex="-1" role="dialog" aria-labelledby="cardDetailsLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cardDetailsLabel">{{this.name}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="row">
        <div class="col-6"><img class="d-block mx-auto" src="{{image_uris.png}}" alt="{{name}}"></div>
        <div class="col-6"></div>
          </div>
      </div>
      <div class="modal-footer">
        {{#if logged}}
        <div class="row">
            <div class="col-12 text-center">
                <form action='/search/card/{{_id}}' method='post'>
                    <input name='owned' type="number" value="1" min="0" class="m-2" style="display: inline; max-width:40px">
                    <button class="btn btn-primary" type='submit'>+</button>
                </form>
            </div>
        </div>
      {{/if}}
      </div>
    </div>
  </div>
</div>





