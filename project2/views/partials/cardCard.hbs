<!-- partials/card.hbs -->
<div class="col-6 col-sm-6 col-md-4 col-lg-3 p-3">
    <img class="d-block mx-auto" src="{{image_uris.png}}" alt="{{name}}">
    {{#if logged}}
    <div class="row">
        <div class="col-12 text-center">
            <form action='/search/card/{{_id}}' method='post'> {{!-- only render this if the user is logged --}}
                <input name='owned' type="number" value="1" min="0" class="m-2" style="display: inline; max-width:40px">
                <button type='submit'>+</button>
            </form>
        </div>
    </div>
    {{/if}}
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>